<div class="container">
  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <h3>注文商品一覧</h3>
    </div>
  </div>
  <div class="row mt-30">
    <div class="col-xs-8">
      <table class="table table-striped table-bordered">
      	<thead>
      	  <h3>注文情報</h3>
      		<tr>
      			<th>注文日</th>
      			<th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
      		</tr>
      		<tr>
      			<th>配送先</th>
      			<th>
     			    <p><%= @order.postal_code %></p>
        			<p><%= @order.address %></p>
        			<p><%= @order.name %></p>
      			</th>
      		</tr>
      		<tr>
      			<th>支払い方法</th>
      			<th><%= @order.payment_method_i18n %></th>
      		</tr>
      		<tr>
      			<th>ステータス</th>
      			<th><%= @order.status_i18n %></th>
      		</tr>
      	</thead>
      </table>
    </div>
    <div class="col-xs-4">
      <table class="table table-bordered">
      	<thead>
      	  <h3>請求情報</h3>
      		<tr>
      			<th>商品合計</th>
      			<th><%= @order.total_payment - @order.shipping_cost %></th>
      		</tr>
      		<tr>
      			<th>配送料</th>
      			<th>
     			    <p><%= @order.shipping_cost %></p>
      			</th>
      		</tr>
      		<tr>
      			<th>ご請求額</th>
      			<th><%= @order.total_payment %></th>
      		</tr>
      	</thead>
      </table>
    </div>
  </div>
  <div class="row mt-30">
    <div class="col-xs-8">
      <h3>注文内容</h3>
      <table class="table table-striped table-bordered">
      	<thead>
      		<tr>
      			<th>商品</th>
      			<th>単価(税込)</th>
      			<th>個数</th>
      			<th>小計</th>
      		</tr>
      	</thead>
      	<tbody>
      	  <% @order.order_details.each do |order_detail| %>
      	  <tr>
      	    <td><%= order_detail.item.name %></td>
      	    <td><%= order_detail.price %></td>
      	    <td><%= order_detail.amount %></td>
      	    <td><%= order_detail.price * order_detail.amount %></td>
      	  </tr>
      	  <% end %>
      	</tbody>
      </table>
    </div>
  </div>
</div>