<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <% if @genre.present? %>
        <h1><%= @genre.name %>一覧(全<%= @items.count %>件)</h1>
      <% else %>
        <h1>商品一覧(全<%= @items.count %>件)</h1>
      <% end%>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <table class="table table-striped">
      	<thead>
      		<tr>
      			<th>ジャンル検索</th>
      		</tr>
      	</thead>
      	<tbody>
        	<% @genres.each do |genre|%>
      		<tr>
      			<td>
      			  <%= form_tag items_path, method: :get do %>
      			    <%= hidden_field_tag :id, genre.id %>
      			    <%= submit_tag genre.name %>
      			  <% end %>
      			</td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
    <div class="col-xs-10 flex">
      <% @items.each do |item| %>
        <div class="item_list mt-30">
          <%= link_to item_path(item) do %>
          <div>
            <%= attachment_image_tag item, :image, :fill, 150, 150 %>
          </div>
          <section>
            <%= item.name %>
          </section>
          <% end %>
          <section>
            ¥<%= (item.price * 1.1).round(0).to_s(:delimited) %>
          </section>
        </div>
      <% end %>
    </div>
  </div>
</div>

