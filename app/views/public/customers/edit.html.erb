<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= form_with model: @customer, url: customers_path, local: true do |f| %>
      <table class="table table-striped">
      	<tbody>
      		<tr>
      		  <td class"middle">氏名</td>
      		  <td>(姓)</td>
      			<td><%= f.text_field :last_name, class:"form-control" %></td>
      			<td>(名)</td>
      			<td><%= f.text_field :first_name, class:"form-control" %></td>
      		</tr>
      		<tr>
      		  <td>フリガナ</td>
      			<td>(セイ)</td>
      			<td><%= f.text_field :last_name_kana, class:"form-control" %></td>
      			<td>(メイ)</td>
      			<td><%= f.text_field :first_name_kana, class:"form-control" %></td>
      		</tr>
      		<tr>
      		  <td>メールアドレス</td>
      		  <td></td>
      			<td colspan="3"><%= f.email_field :email, class:"form-control" %></td>
      		</tr>
      		<tr>
      		  <td>郵便番号(ハイフンなし)</td>
      		  <td></td>
      			<td colspan="3"><%= f.text_field :postal_code, class:"form-control" %></td>
      		</tr>
      		<tr>
      		  <td>住所</td>
      		  <td></td>
      			<td colspan="3"><%= f.text_field :address, class:"form-control" %></td>
      		</tr>
      		<tr>
      		  <td>電話番号(ハイフンなし)</td>
      		  <td></td>
      			<td colspan="3"><%= f.text_field :telephone_number, class:"form-control" %></td>
      		</tr>
      	</tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-3">
      <%= f.submit '編集内容を保存する', class:"btn btn-primary ml-10" %>
      <% end %>
    </div>
    <div class="col-xs-2 col-xs-offset-3"><%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-primary" %></div>
  </div>
</div>