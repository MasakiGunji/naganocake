<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= form_with model: @customer, url: customers_path, local: true do |f| %>
    <div class="row mt-10">
      <div class="col-xs-2">
        <p>名前</p>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :last_name,"(姓)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :first_name,"(名)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-10">
      <div class="col-xs-2">
        <p>フリガナ</p>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :last_name_kana,"(セイ)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :first_name_kana,"(メイ)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :email,"メールアドレス" %>
        </div>
        <div class="col-xs-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :postal_code,"郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :address,"住所" %>
        </div>
        <div class="col-xs-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class:"form-control" %>
        </div>
      </div>
    </div>

  <div class="row mt-30">
    <div class="col-xs-2 col-xs-offset-3">
      <%= f.submit '編集内容を保存する', class:"btn btn-primary ml-10" %>
      <% end %>
    </div>
    <div class="col-xs-2 col-xs-offset-3"><%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-primary" %></div>
  </div>
</div>