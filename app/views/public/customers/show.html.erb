<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>マイページ</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-xs-2">
      <%= link_to '編集する', customers_edit_path, class: 'btn btn-default w-100px mt-15' %>
    </div>
  </div>

  <div class="row mt-10">
    <div class="col-xs-6">
      <table class="table table-striped">
      	<tbody>
      		<tr>
      		  <td>氏名</td>
      			<td><%= @customer.last_name %> <%= @customer.first_name %></td>
      		</tr>
      		<tr>
      		  <td>フリガナ</td>
      			<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      		</tr>
      		<tr>
      		  <td>郵便番号</td>
      			<td><%= @customer.postal_code %></td>
      		</tr>
      		<tr>
      		  <td>住所</td>
      			<td><%= @customer.address %></td>
      		</tr>
      		<tr>
      		  <td>電話番号</td>
      			<td><%= @customer.telephone_number %></td>
      		</tr>
      		<tr>
      		  <td>メールアドレス</td>
      			<td><%= @customer.email %></td>
      		</tr>
      	</tbody>
      </table>
    </div>
  </div>
  <div class="row mt-10">
    <div class="col-xs-2">
      <h3>配送先</h3>
    </div>
    <div class="col-xs-2">
      <%= link_to '一覧を見る', addresses_path, class: 'btn btn-default w-100px mt-15' %>
    </div>
  </div>
  <div class="row mt-10">
    <div class="col-xs-2">
      <h3>注文履歴</h3>
    </div>
    <div class="col-xs-2">
      <%= link_to '一覧を見る', customers_edit_path(@customer), class: 'btn btn-default w-100px mt-15' %>
    </div>
  </div>
</div>
