<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-xs-6">
      <h3><%= link_to "新規商品登録", new_admins_item_path %></h3>
    </div>
  </div>


  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>商品名</th>
  			<th>単価(税込)</th>
  			<th>数量</th>
  			<th>小計</th>
  			<th></th>
  		</tr>
  	</thead>
  	<tbody>
  	  <% @cart_items.each do |cart_item| %>
    		<tr>
    			<td><%= cart_item.item.name %></td>
    			<td><%= (cart_item.item.price * 1.1).round(0) %></td>
    			<td>
    			  <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true do |f| %>
    			    <%= f.select :amount, [[1], [2], [3], [4], [5]] %>
    			    <%= f.submit '変更', class:"btn btn-primary" %>
    			  <% end %>
    			</td>
    			<td><%= (cart_item.item.price * 1.1).round(0) * cart_item.amount %></td>
    		</tr>
  		<% end %>
  	</tbody>
  </table>
</div>
