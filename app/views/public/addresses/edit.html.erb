<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>配送先編集</h3>
    </div>
  </div>

  <%= form_with model: @address, url: address_path, local: true do |f| %>
  <div class="row mt-20">
    <div class="col-xs-2 col-xs-offset-2">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>
  <div class="row mt-20">
    <div class="col-xs-2 col-xs-offset-2">
      <p>住所</p>
    </div>
    <div class="col-xs-6">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>
  <div class="row mt-20">
    <div class="col-xs-2 col-xs-offset-2">
      <p>宛名</p>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="col-xs-3 col-xs-offset-2">
      <%= f.submit '登録する', class:"btn btn-primary ml-10" %>
    </div>
  </div>
  <% end %>
</div>