<div class="container">
  <div class="row">
    <div class="col-xs-12 ml-10">
      <h2>新規会員登録</h2>
    </div>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row mt-10">
      <div class="col-xs-2">
        <p>名前</p>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :last_name,"(姓)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :first_name,"(名)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-10">
      <div class="col-xs-2">
        <p>フリガナ</p>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :last_name_kana,"(セイ)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-1">
          <%= f.label :first_name_kana,"(メイ)", class:"float-right" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :email,"メールアドレス" %>
        </div>
        <div class="col-xs-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :postal_code,"郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :address,"住所" %>
        </div>
        <div class="col-xs-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :password,"パスワード(6文字以上)" %>
        </div>
        <div class="col-xs-3">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-10">
      <div class="field">
        <div class="col-xs-3">
          <%= f.label :password_confirmation,"パスワード(確認用)" %>
        </div>
        <div class="col-xs-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-30">
      <div class="col-xs-4"></div>
      <div class="col-xs-3">
        <%= f.submit "新規登録", class:"form-control new" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 ml-10">
      <h2>既に登録済みの方</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-11">
      <p><%= link_to "こちら",new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>
