<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>商品一覧</h3>
    </div>
    <div class="col-xs-6">
      <h3><%= link_to "新規商品登録", new_admins_item_path %></h3>
    </div>
  </div>


  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>商品ID</th>
  			<th>商品名</th>
  			<th>税抜価格</th>
  			<th>ジャンル</th>
  			<th>ステータス</th>
  		</tr>
  	</thead>
  	<tbody>
  	  <% @items.each do |item| %>
    		<tr>
    			<td><%= item.id %></td>
    			<td>
    			  <%= link_to admins_item_path(item) do %>
    			    <%= item.name %>
    			  <% end %>
    			</td>
    			<td><%= item.price %></td>
    			<td><%= item.genre.name %></td>
    			<td>
					  <%= item.is_active == true ? "販売中":"販売停止中" %>
    			</th>
    		</tr>
  		<% end %>
  	</tbody>
  </table>
</div>
