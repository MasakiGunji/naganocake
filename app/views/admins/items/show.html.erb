<div class="container">
	<div class="row">
		<h1>新規商品登録</h1>
	</div>
	<div class="row">
		<div class="col-xs-3">
			<%= attachment_image_tag @item, :image, :fill, 200, 200 %>
		</div>
		<div class="col-xs-9">
		  <table class="table table-striped">
				<thead>
					<tr>
						<th>商品名</th>
						<th><%= @item.name %></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>商品説明</th>
						<th><%= @item.introduction %></th>
					</tr>
					<tr>
						<th>ジャンル</th>
						<th><%= @item.genre.name %></th>
					</tr>
					<tr>
						<th>税込み価格(税抜き価格)</th>
						<th><%= (@item.price*1.1).round(0) %>(<%= @item.price %>)円</th>
					</tr>
					<tr>
						<th>販売ステータス</th>
						<th><%= @item.is_active == true ? "販売中":"販売停止中" %></th>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3">
			<%= link_to "編集する", edit_admins_item_path(@item), class: 'btn btn-default w-100px' %>
		</div>
	</div>
</div>

