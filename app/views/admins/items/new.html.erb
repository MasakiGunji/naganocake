  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <h2><%= @item.errors.count %>errors</h2>
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h4>新規商品登録</h4>
        <%= form_with model: @item, url: admins_items_path, local: true do |f| %>

        <%= f.attachment_field :image %>
        <h1>商品名</h1>
        <%= f.text_field :name, class: "form-control" %>
        <h1>商品説明</h1>
        <%= f.text_field :introduction, class: "form-control" %>
        <h1>ジャンル</h1>
        <%= f.collection_select :genre_id, Genre.where(is_active: 1), :id, :name %>
        <h1>税抜き価格</h1>
        <%= f.number_field :price, class: "form-control" %>
        <h1>販売ステータス</h1>
        <%= f.select :is_active, [['販売停止中', 0], ['販売中', 1]] %>

        </br><%= f.submit '追加', class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>


