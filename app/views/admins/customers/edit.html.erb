<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <%= form_with model: @customer, url: admins_customer_path(@customer), local: true do |f| %>
        <table class="table table-striped">
        	<thead>
        		<tr>
        			<th>顧客ID</th>
        			<th><%= @customer.id %></th>
        		</tr>
        	</thead>
        	<tbody>
        		<tr>
        		  <td>氏名</td>
        			<td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        		</tr>
        		<tr>
        		  <td>フリガナ</td>
        			<td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
        		</tr>
        		<tr>
        		  <td>郵便番号</td>
        			<td><%= f.text_field :postal_code %></td>
        		</tr>
        		<tr>
        		  <td>住所</td>
        			<td><%= f.text_field :address %></td>
        		</tr>
        		<tr>
        		  <td>電話番号</td>
        			<td><%= f.text_field :telephone_number %></td>
        		</tr>
        		<tr>
        		  <td>メールアドレス</td>
        			<td><%= f.email_field :email %></td>
        		</tr>
        		<tr>
        		  <td>会員ステータス</td>
        			<td><%= f.radio_button :is_deleted, false %>有効　<%= f.radio_button :is_deleted, true %>退会済み</td>
        		</tr>
        	</tbody>
        </table>
        <%= f.submit '変更を保存する', class:"btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>