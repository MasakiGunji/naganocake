
<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-10">
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-30">
      <div class="col-xs-2"></div>
      <div class="field">
        <div class="col-xs-2">
          <%= f.label :email,"メールアドレス" %>
        </div>
        <div class="col-xs-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-30">
      <div class="col-xs-2"></div>
      <div class="field">
        <div class="col-xs-2">
          <%= f.label :password,"パスワード" %>
        </div>
        <div class="col-xs-5">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div>

    <div class="row mt-30">
      <div class="col-xs-4"></div>
      <div class="col-xs-3">
        <%= f.submit "Log in", class:"form-control new"%>
      </div>
    </div>
  <% end %>
</div>
