<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>

  <h4>ジャンル</h4>
  <%= f.text_field :name, class:"book-title-input" %>

  <h4>Opinion</h4>
  <div><%= f.radio_button :is_active, true %>有効</div>
  <div><%= f.radio_button :is_active, false %>無効</div>
  <%= f.submit '追加', class:"btn btn-primary" %>
  <% end %>


  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>ジャンル</th>
  			<th>状態</th>
  			<th></th>
  		</tr>
  	</thead>
  	<tbody>
  	  <% @genres.each do |genre| %>
    		<tr>
    			<th><%= genre.name %></th>
    			<th>
    			  <%= genre.is_active == true ? "有効":"無効" %>
    			</th>
    			<th>
    			  <%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %>
    			</th>
    		</tr>
  		<% end %>
  	</tbody>
  </table>
</div>
